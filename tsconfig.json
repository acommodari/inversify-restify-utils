{
    "compilerOptions": {
        "target": "es5",
        "lib": ["es6", "dom"],
        "typeRoots": ["node_modules/@types", "types/restify"],
        "types": ["restify", "inversify", "mocha", "reflect-metadata"],
        "module": "commonjs",
        "moduleResolution": "node",
        "isolatedModules": false,
        "jsx": "react",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "noImplicitAny": true,
        "preserveConstEnums": true,
        "removeComments": true,
        "suppressImplicitAnyIndexErrors": false,
        "noResolve": false,
        "noUnusedParameters": false,
        "noUnusedLocals": true,
        "strictNullChecks": true
    }
}
